<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Login">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp" >

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:text="Tiếng Việt"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="114dp"
                android:layout_marginBottom="5dp"
                android:text="English"
                android:textColor="@color/colorprimary"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:fontFamily="monospace"
                android:text="DAIKIN"
                android:textColor="@color/colorprimary"
                android:textSize="35dp"
                android:textStyle="bold|italic"></TextView>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_lb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/hinh1"
                    android:text="Fullname"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
                <ImageView
                    android:layout_marginTop="8dp"
                    android:id="@+id/hinh1"
                    android:paddingRight="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/username" />

                <EditText
                    android:id="@+id/username1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_lb1"
                    android:layout_toRightOf="@id/hinh1"
                    android:hint="Enter username..."
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="22sp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/text_lb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/hinh2"
                    android:text="Password"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
                <ImageView
                    android:id="@+id/hinh2"
                    android:layout_marginTop="8dp"
                    android:paddingRight="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/password"
                    />

                <EditText
                    android:id="@+id/password1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_lb2"
                    android:layout_toRightOf="@id/hinh2"
                    android:hint="Enter password..."
                    android:inputType="textPassword"
                    android:textColor="@color/colorprimary"
                    android:textColorHint="@color/black"
                    android:textSize="22sp" />
            </RelativeLayout>

            <CheckBox
                android:id="@+id/showpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorprimary"
                android:buttonTint="#ffffff"
                android:checked="false"
                android:text="Show password"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@color/black"
                android:textSize="15sp"
                android:paddingRight="2dp"
                />

            <Button
                android:id="@+id/sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/button1"
                android:text="Sign In"
                android:textColor="#FDFCFC" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="#FDFCFC"
                    android:background="@drawable/button2"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:textColor="@null"
                    android:layout_weight="1"/>
                <Button
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="FaceBook"
                    android:textColor="#FDFCFC"
                    android:background="@drawable/button3"/>

            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/forgot1"
                android:layout_centerHorizontal="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot password"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#EF4848"/>

            <TextView
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgot1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Don't have account? Sign up now"
                android:textColor="@color/colorprimary"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
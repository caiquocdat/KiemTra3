<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".SignUp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="55dp"
            android:fontFamily="monospace"
            android:text="DAIKIN"
            android:textColor="@color/colorprimary"
            android:textSize="35dp"
            android:textStyle="bold|italic"></TextView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_lb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/hinh1"
                android:text="Fullname"
                android:textColor="@color/black"
                android:textColorHint="@color/colorprimary"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/hinh1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:paddingRight="10dp"
                android:src="@drawable/username" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_lb1"
                android:layout_toRightOf="@id/hinh1"
                android:hint="User name"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="22sp"></EditText>

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView

                android:id="@+id/text_lb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/hinh2"
                android:text="Password"
                android:textColor="@color/black"
                android:textColorHint="@color/colorprimary"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/hinh2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:paddingRight="10dp"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_lb2"
                android:layout_toRightOf="@id/hinh2"
                android:hint="Enter password"
                android:textColor="@color/colorprimary"
                android:textColorHint="@color/black"
                android:textSize="22sp"></EditText>

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView

                android:id="@+id/text_lb21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/hinh21"
                android:text="Confirm Password"
                android:textColor="@color/black"
                android:textColorHint="@color/colorprimary"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/hinh21"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:paddingRight="10dp"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/repassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_lb21"
                android:layout_toRightOf="@id/hinh21"
                android:hint="Enter confirm password"
                android:textColor="@color/colorprimary"
                android:textColorHint="@color/black"
                android:textSize="22sp"></EditText>

        </RelativeLayout>


        <Button
            android:id="@+id/btnsignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button1"
            android:text="Sign Up"
            android:textColor="#FDFCFC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@null" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Forgot password"
            android:textColor="#EF4848"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dangnhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/forgot"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Have account? Sign in now"
            android:textColor="@color/colorprimary"
            android:textSize="25sp"
            android:textStyle="bold" />


    </RelativeLayout>
</LinearLayout>